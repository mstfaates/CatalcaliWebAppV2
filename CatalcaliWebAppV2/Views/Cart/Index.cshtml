@model CatalcaliWebAppV2.Models.Cart
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_UserLayout.cshtml";
}
<!-- Shoping Cart Section Begin -->
<section class="shoping-cart spad">
    <div class="container">
        <h5>@Html.ValidationSummary()</h5>
        @if (Model.CartLines.Count > 0)
        {
            <div class="row">
                <div class="col-lg-12">
                    <div class="shoping__cart__table">
                        <table>
                            <thead>
                                <tr>
                                    <th class="shoping__product">Ürünler</th>
                                    <th>Fiyat</th>
                                    <th>Adet</th>
                                    <th>Toplam</th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model.CartLines)
                                {
                                    <tr>
                                        <td class="shoping__cart__item">
                                            <img src="~/Areas/Admin/Upload/Product/@item.Product.Image" alt="@item.Product.ImageDescription" width="101" height="100">
                                            <h5>@item.Product.Name</h5>
                                        </td>
                                        <td class="shoping__cart__price">
                                            @item.Product.Price.ToString("N")<span>&#8378;</span>
                                        </td>
                                        <td class="shoping__cart__quantity">
                                            @item.Quantity
                                        </td>
                                        <td class="shoping__cart__total">
                                            @((item.Product.Price * item.Quantity).ToString("N"))<span>&#8378;</span>
                                        </td>
                                        <td class="shoping__cart__item__close">
                                            @using (Html.BeginForm("RemoveFromCart", "Cart"))
                                            {
                                                @Html.Hidden("Id", item.Product.ProductId)
                                                <button type="submit" class="btn badge-danger">
                                                    <i class="icon_close" aria-hidden="true"></i>
                                                </button>
                                            }
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-lg-12">
                    <div class="shoping__cart__btns">
                        <a href="/Home/Index" class="primary-btn cart-btn">Alışverişe Devam Et</a>
                        <a href="" class="primary-btn cart-btn cart-btn-right">
                            <span class="icon_loading"></span>
                            Sepeti Güncelle
                        </a>
                    </div>
                </div>
                <div class="col-lg-6">
                    <div class="shoping__continue">
                        <div class="shoping__discount">
                            <h5>İndirim Kodu</h5>
                            <form action="#">
                                <input type="text" placeholder="İndirim kodunuzu buraya giriniz">
                                <button type="submit" class="site-btn">İndirim Kodu</button>
                            </form>
                        </div>
                    </div>
                </div>
                <div class="col-lg-6">
                    <div class="shoping__checkout">
                        <h5>Sepet Toplam Tutar</h5>
                        <ul>
                            <li>Ara Toplam <span>@Model.SubTotal().ToString("N") <span>&#8378;</span></span></li>
                            @if (Model.SubTotal() > 0)
                            {
                                <li>
                                    Kargo Ücreti <span>@Model.ShippingFee().ToString("N") <span>&#8378;</span></span>
                                </li>
                            }
                            <li>
                                Toplam <span>@Model.Total().ToString("N") <span>&#8378;</span></span>
                            </li>
                        </ul>
                        <a href="/siparis" class="primary-btn">Ödeme adımına geç</a>
                    </div>
                </div>
            </div>
        }
    </div>
</section>
<!-- Shoping Cart Section End -->
