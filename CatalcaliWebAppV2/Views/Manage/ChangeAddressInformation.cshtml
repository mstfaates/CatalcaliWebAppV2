@model CatalcaliWebAppV2.Models.ChangeUserAddressViewModel

@{
    ViewBag.Title = "ChangeAddressInformation";
    Layout = "~/Views/Shared/_UserLayout.cshtml";
}
<style>
    #custom {
        padding-top: 20px;
        padding-bottom: 130px;
    }
</style>
<div class="container">
    <section class="shoping-cart spad">
        @if (TempData["message.success"] != null)
        {
            <div class="alert alert-success">
                @TempData["message.success"]
            </div>
        }
        @if (TempData["message.error"] != null)
        {
            <div class="alert alert-danger">
                @TempData["message.error"]
            </div>
        }
        <section class="checkout spad" style="padding-top: 0px; padding-bottom: 0px;">
            <div class="row">
                <div class="col-lg-12">
                    <h6 style="font-size:20px; color:black; margin-bottom:30px">Adres Değişikliği</h6>
                </div>
            </div>
        </section>
        <div class="row">
            <div class="col-md-3">
                <ul class="list-group" id="custom">
                    <a href="/hesap/kullanici-bilgi-güncelleme" class="list-group-item">
                        Üyelik Bilgilerim
                    </a>
                    <a href="/hesabim/Siparislerim" class="list-group-item">
                        Siparişlerim
                    </a>
                    <a href="/hesap/sifre-degistirme" class="list-group-item">
                        Şifre Değişikliği
                    </a>
                    <a href="/hesap/adres-bilgisi-güncelle" class="list-group-item active">
                        Adres Değişikliği
                    </a>
                </ul>
            </div>
            <div class="col-md-9">



                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()
                    <div class="form-horizontal">
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        <div class="form-group">
                            <span class="control-label col-md-2">Kayıtlı mevcut adresiniz</span>
                            <br />
                            <div class="col-md-10">
                                @Html.EditorFor(model => model.Address, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.Address, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-md-offset-2 col-md-10">
                                <input type="submit" value="Adresi Kaydet" class="primary-btn" />
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </section>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}