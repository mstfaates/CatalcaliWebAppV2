@model CatalcaliWebAppV2.Models.IndexViewModel
@{
    ViewBag.Title = "Manage";
}


<div class="container">
    <!-- Outer Row -->
    <div class="row">
        <div class="col-xl-6 login-page-margin">
            <div class="card o-hidden border-0 shadow-lg my-5">
                <div class="card-body p-0">
                    <!-- Nested Row within Card Body -->
                    <div class="row">
                        <div class="col-lg-12">
                            <div class="p-5">
                                <div class="text-center">
                                    <h1 class="h4 text-gray-900 mb-4">Şifre Sıfırla</h1>
                                </div>
                                <p class="text-success">@ViewBag.StatusMessage</p>
                                <div>
                                    <h4>Hesap ayarlarınızı değiştirin</h4>
                                    <hr />
                                    <dl class="dl-horizontal">
                                        <dt>Şifre:</dt>
                                        <dd>
                                            [
                                            @if (Model.HasPassword)
                                            {
                                                @Html.ActionLink("Şifreni Değiştir", "sifre-degistirme")
                                            }
                                            else
                                            {
                                                @Html.ActionLink("Oluştur", "sifre-olustur")
                                            }
                                            ]
                                        </dd>
                                    </dl>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>