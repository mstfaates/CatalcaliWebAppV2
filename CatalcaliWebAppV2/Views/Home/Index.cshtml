        padding-top: 10px;
    }

        .product__pagination span,
        .blog__pagination span {
            display: inline-block;
            width: 30px;
            height: 30px;
            border: 1px solid #78a15c;
            font-size: 14px;
            color: #78a15c;
            font-weight: 700;
            line-height: 28px;
            text-align: center;
            margin-right: 16px;
            -webkit-transition: all, 0.3s;
            -moz-transition: all, 0.3s;
            -ms-transition: all, 0.3s;
            -o-transition: all, 0.3s;
            transition: all, 0.3s;
        }

            .product__pagination span:hover,
            .blog__pagination span:hover {
                background: #78a15c;
                border-color: #78a15c;
                color: #78a15c;
            }

            .product__pagination span:last-child,
            .blog__pagination span:last-child {
               /* margin-right: 0;*/
            }

    .blog__pagination {
        padding-top: 5px;
        position: relative;
    }

        .blog__pagination:before {
            position: absolute;
            left: 0;
            top: -29px;
            height: 1px;
            width: 100%;
            background: #000000;
            opacity: 0.1;
            content: "";
        }
</style>


