@model IEnumerable<CatalcaliWebAppV2.Models.ApplicationUser>

@{
    ViewBag.Title = "UserList";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}
<style>
    #badgeWidth {
        width: 50px;
    }
</style>
<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">Kullanıcı Listesi</h6>
    </div>
    <div class="card-body">
        <div class="table-responsive table-hover">
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th><i class="fa fa-pencil-alt" aria-hidden="true"></i> İsim</th>
                        <th><i class="fa fa-pencil-alt" aria-hidden="true"></i>Soyisi</th>
                        <th><i class="fa fa-address-book" aria-hidden="true"></i> Adres</th>
                        <th><i class="fa fa-envelope" aria-hidden="true"></i> Eposta</th>
                        <th><i class="fa fa-phone" aria-hidden="true"></i> Telefon</th>
                        <th><i class="fa fa-user" aria-hidden="true"></i> Kullanıcı Adı</th>
                        <th><i class="fa fa-cog" aria-hidden="true"></i> İşlemler</th>
                    </tr>
                </thead>
                <tfoot>
                    <tr>
                        <th><i class="fa fa-pepencil-altncil" aria-hidden="true"></i> İsim</th>
                        <th><i class="fa fa-pencil-alt" aria-hidden="true"></i>Soyisi</th>
                        <th><i class="fa fa-address-book" aria-hidden="true"></i> Adres</th>
                        <th><i class="fa fa-envelope" aria-hidden="true"></i> Eposta</th>
                        <th><i class="fa fa-phone" aria-hidden="true"></i> Telefon</th>
                        <th><i class="fa fa-user" aria-hidden="true"></i> Kullanıcı Adı</th>
                        <th><i class="fa fa-cog" aria-hidden="true"></i> İşlemler</th>
                    </tr>
                </tfoot>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@Html.DisplayFor(modelItem => item.FirstName)</td>
                            <td>@Html.DisplayFor(modelItem => item.LastName)</td>
                            <td>@Html.DisplayFor(modelItem => item.Address)</td>
                            <td>@Html.DisplayFor(modelItem => item.Email)</td>
                            <td>@Html.DisplayFor(modelItem => item.PhoneNumber)</td>
                            <td>@Html.DisplayFor(modelItem => item.UserName)</td>
                            <td>
                                @Html.ActionLink("Detay", "Details", new { id = item.Id }, new { @class = "badge badge-info", Id= "badgeWidth" }) |
                                @Html.ActionLink("Sil", "Delete", new { id = item.Id }, new { @class = "badge badge-danger", Id = "badgeWidth" })
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>