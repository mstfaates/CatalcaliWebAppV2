@model IEnumerable<CatalcaliWebAppV2.Models.RoleViewModels>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}
<style>
    #badgeWidth {
        width: 60px;
    }
</style>
<h2>Sistem Rol Listesi</h2>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            İşlemler
        </th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.ActionLink("Güncelle", "Edit", new { id = item.Id }, new { @class = "badge badge-warning", Id = "badgeWidth" }) |
                @Html.ActionLink("Detay", "Details", new { id = item.Id }, new { @class = "badge badge-info", Id = "badgeWidth" }) |
                @Html.ActionLink("Sil", "Delete", new { id = item.Id }, new { @class = "badge badge-danger", Id = "badgeWidth" })
            </td>
        </tr>
    }

</table>
