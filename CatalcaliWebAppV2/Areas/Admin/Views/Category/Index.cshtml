@model IEnumerable<CatalcaliWebAppV2.Entities.Category>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}
<style>
    #badgeWidth {
        width: 60px;
    }
</style>
<h2>Kategori Listesi</h2>

<table class="table table-hover">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.CategoryImage)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Description)
        </th>
        <th>
            İşlemler
        </th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            @if (item.CategoryImage != null && item.CategoryImage != "")
            {
                <td>
                    <img src="~/Areas/Admin/Upload/Icon/@item.CategoryImage" width="80" height="80" />
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Description)
                </td>
                <td>
                    @Html.ActionLink("Güncelle", "Edit", new { id = item.Id }, new { @class = "badge badge-warning", Id = "badgeWidth" }) |
                    @Html.ActionLink("Detay", "Details", new { id = item.Id }, new { @class = "badge badge-info", Id = "badgeWidth" }) |
                    @Html.ActionLink("Sil", "Delete", new { id = item.Id }, new { @class = "badge badge-danger", Id = "badgeWidth" })
                </td>
            }
            else
            {
                <td>
                    <img src="~/Areas/Admin/Upload/no-image.png6062020202544.png" width="80" height="80" />
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Description)
                </td>
                <td>
                    @Html.ActionLink("Güncelle", "Edit", new { id = item.Id }, new { @class = "badge badge-warning", Id = "badgeWidth" }) |
                    @Html.ActionLink("Detay", "Details", new { id = item.Id }, new { @class = "badge badge-info", Id = "badgeWidth" }) |
                    @Html.ActionLink("Sil", "Delete", new { id = item.Id }, new { @class = "badge badge-danger", Id = "badgeWidth" })
                </td>
            }
        </tr>
    }

</table>
