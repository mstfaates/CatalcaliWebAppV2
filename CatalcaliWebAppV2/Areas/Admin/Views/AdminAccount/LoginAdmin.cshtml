@using CatalcaliWebAppV2.Models
@model LoginViewModel

@{ ViewBag.Title = "Log in";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<body class="bg-gradient-primary">

    <div class="container">

        <!-- Outer Row -->
        <div class="row justify-content-center">

            <div class="col-xl-5 col-lg-12 col-md-9">

                <div class="card o-hidden border-0 shadow-lg my-5">
                    <div class="card-body p-0">
                        <!-- Nested Row within Card Body -->
                        <div class="row">
                            <div class="col-lg-12">
                                <div class="p-5">
                                    <div class="text-center">
                                        <h1 class="h4 text-gray-900 mb-4">Çatalcalı Yönetim Paneli</h1>
                                    </div>
                                    <section id="loginForm">
                                        @using (Html.BeginForm("LoginAdmin", "AdminAccount", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
                                        {
                                            @Html.AntiForgeryToken()

                                            <hr />
                                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                                            <div class="form-group">
                                                @Html.TextBoxFor(m => m.Email, new { @class = "form-control form-control-user", @placeholder = "Eposta" })
                                                @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
                                            </div>
                                            <div class="form-group">
                                                @Html.PasswordFor(m => m.Password, new { @class = "form-control form-control-user", @placeholder = "Parola" })
                                                @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
                                            </div>
                                            <div class="form-group">
                                                <div class="custom-control custom-checkbox small">
                                                    @Html.EditorFor(model => model.RememberMe, new { htmlAttributes = new { @class = "custom-control-input", id = "customCheck" } })
                                                    <input type="checkbox" class="custom-control-input" id="customCheck">
                                                    <label class="custom-control-label" for="customCheck">Beni Hatırla</label>
                                                </div>
                                            </div>
                                            <div class="form-group">
                                                <input type="submit" value="Giriş Yap" class="btn btn-primary btn-user btn-block" />
                                            </div>
                                        }
                                    </section>
                                    <hr>
                                    <div class="text-center">
                                        <a class="small" href="hesabimsifremi-unuttum">Şifremi Unuttum</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

            </div>

        </div>

    </div>

</body>

