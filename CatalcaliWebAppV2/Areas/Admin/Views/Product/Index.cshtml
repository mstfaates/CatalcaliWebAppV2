@model IEnumerable<CatalcaliWebAppV2.Entities.Product>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}
<style>
    #badgeWidth {
        width: 60px;
    }
</style>
<h2>Ürün Listesi</h2>

<div>
    @ViewBag.Mesaj
</div>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Image)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CategoryId)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.IsHome)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.IsApproved)
        </th>
        <th>
            İşlemler
        </th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                <img src="~/Areas/Admin/Upload/Product/@item.Image" width="80" height="80" class="img-thumbnail" />
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CategoryId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @if (item.IsHome)
                {
                    <label class="badge badge-success" id="badgeWidth">
                        <i class="fa fa-check-circle-o" aria-hidden="true"></i>
                        Evet
                    </label>
                }
                else
                {
                    <label class="badge badge-danger" id="badgeWidth">
                        <i class="fa fa-check-circle-o" aria-hidden="true"></i>
                        Hayır
                    </label>
                }
            </td>
            <td>
                @if (item.IsApproved)
                {
                    <label class="badge badge-success" id="badgeWidth">
                        <i class="fa fa-check-circle-o" aria-hidden="true"></i>
                        Evet
                    </label>
                }
                else
                {
                    <label class="badge badge-danger" id="badgeWidth">
                        <i class="fa fa-check-circle-o" aria-hidden="true"></i>
                        Hayır
                    </label>
                }
            </td>
            <td>
                @Html.ActionLink("Güncelle", "Edit", new { id = item.ProductId }, new { @class = "badge badge-warning", Id = "badgeWidth" }) |
                @Html.ActionLink("Detay", "Details", new { id = item.ProductId }, new { @class = "badge badge-info", Id = "badgeWidth" }) |
                @Html.ActionLink("Sil", "Delete", new { id = item.ProductId }, new { @class = "badge badge-danger", Id = "badgeWidth" })
            </td>
        </tr>
    }

</table>
